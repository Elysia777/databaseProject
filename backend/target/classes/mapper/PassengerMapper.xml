<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taxi.mapper.PassengerMapper">

    <resultMap id="BaseResultMap" type="com.taxi.entity.Passenger">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="emergency_contact" property="emergencyContact" jdbcType="VARCHAR"/>
        <result column="emergency_phone" property="emergencyPhone" jdbcType="VARCHAR"/>
        <result column="default_payment_method" property="defaultPaymentMethod" jdbcType="VARCHAR"/>
        <result column="rating" property="rating" jdbcType="DECIMAL"/>
        <result column="total_orders" property="totalOrders" jdbcType="INTEGER"/>
        <result column="total_spent" property="totalSpent" jdbcType="DECIMAL"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, emergency_contact, emergency_phone, default_payment_method, rating, total_orders, total_spent, created_at, updated_at
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM passengers
        WHERE id = #{id}
    </select>

    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM passengers
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.taxi.entity.Passenger" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO passengers (
            user_id, emergency_contact, emergency_phone, default_payment_method, rating, total_orders, total_spent, created_at, updated_at
        ) VALUES (
            #{userId}, #{emergencyContact}, #{emergencyPhone}, #{defaultPaymentMethod}, #{rating}, #{totalOrders}, #{totalSpent}, #{createdAt}, #{updatedAt}
        )
    </insert>

    <update id="updateById" parameterType="com.taxi.entity.Passenger">
        UPDATE passengers
        SET user_id = #{userId},
            emergency_contact = #{emergencyContact},
            emergency_phone = #{emergencyPhone},
            default_payment_method = #{defaultPaymentMethod},
            rating = #{rating},
            total_orders = #{totalOrders},
            total_spent = #{totalSpent},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM passengers WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM passengers
        ORDER BY created_at DESC
    </select>

    <select id="selectByRating" parameterType="java.math.BigDecimal" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM passengers
        WHERE rating >= #{minRating}
        ORDER BY rating DESC
    </select>

</mapper> 